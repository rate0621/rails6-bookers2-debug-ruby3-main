<% if @recipient %>
  <p>Sending message to: <%= @recipient.name %></p>
  <%= form_with model: @message, local: true do |f| %>
    <%= f.hidden_field :receiver_id, value: @recipient.id %>
    <%= f.text_area :body, placeholder: "Your message here", maxlength: 140, rows: 4, class: "form-control" %>
    <%= f.submit "Send Message", class: "btn btn-primary mt-3" %>
  <% end %>
<% else %>
  <p>Please select a recipient first.</p>
<% end %>
