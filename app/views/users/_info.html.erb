<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= user.following.count %></th>
	  <th><%= link_to "Follows", following_user_path(user) %>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= user.followers.count %></th>
	  <th><%= link_to "Followers", followers_user_path(user) %>
</th>
  </tr>
  <% unless user.id == current_user.id %>
  <tr>
    <th>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー解除', relationship_path(current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'フォローする', relationships_path(followed_id: user.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
    </th>
  </tr>
  <% end %>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog">aaaaaaaaaa</i>
  <% end %>
</div>